{
  "info": {
    "name": "Game API Collection",
    "description": "Comprehensive API collection for testing Game API endpoints",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "https://localhost:5001",
      "type": "string"
    },
    {
      "key": "token",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Register User",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"testplayer\",\n  \"email\": \"testplayer@example.com\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/auth/register",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "register"]
            }
          }
        },
        {
          "name": "Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    var jsonData = pm.response.json();",
                  "    pm.collectionVariables.set(\"token\", jsonData.token);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"player1\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/auth/login",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "login"]
            }
          }
        }
      ]
    },
    {
      "name": "Players",
      "item": [
        {
          "name": "Get All Players",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/players?page=1&pageSize=10",
              "host": ["{{baseUrl}}"],
              "path": ["api", "players"],
              "query": [
                {"key": "page", "value": "1"},
                {"key": "pageSize", "value": "10"}
              ]
            }
          }
        },
        {
          "name": "Get Player by ID",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/players/1",
              "host": ["{{baseUrl}}"],
              "path": ["api", "players", "1"]
            }
          }
        },
        {
          "name": "Create Player",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"NewWarrior\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/players",
              "host": ["{{baseUrl}}"],
              "path": ["api", "players"]
            }
          }
        },
        {
          "name": "Update Player",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"level\": 20,\n  \"experience\": 5000,\n  \"gold\": 3000\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/players/1",
              "host": ["{{baseUrl}}"],
              "path": ["api", "players", "1"]
            }
          }
        }
      ]
    },
    {
      "name": "Characters",
      "item": [
        {
          "name": "Get All Characters",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/characters",
              "host": ["{{baseUrl}}"],
              "path": ["api", "characters"]
            }
          }
        },
        {
          "name": "Create Character",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Aragorn\",\n  \"characterClass\": \"Warrior\",\n  \"playerId\": 1\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/characters",
              "host": ["{{baseUrl}}"],
              "path": ["api", "characters"]
            }
          }
        }
      ]
    },
    {
      "name": "Items",
      "item": [
        {
          "name": "Get All Items",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/items?minRarity=5",
              "host": ["{{baseUrl}}"],
              "path": ["api", "items"],
              "query": [
                {"key": "minRarity", "value": "5"}
              ]
            }
          }
        },
        {
          "name": "Create Item",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Dragon Sword\",\n  \"description\": \"A powerful sword forged from dragon scales\",\n  \"itemType\": \"Weapon\",\n  \"attackBonus\": 75,\n  \"defenseBonus\": 15,\n  \"value\": 8000,\n  \"rarity\": 9,\n  \"quantity\": 1,\n  \"playerId\": 1\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/items",
              "host": ["{{baseUrl}}"],
              "path": ["api", "items"]
            }
          }
        }
      ]
    },
    {
      "name": "Scores",
      "item": [
        {
          "name": "Get All Scores",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/scores",
              "host": ["{{baseUrl}}"],
              "path": ["api", "scores"]
            }
          }
        },
        {
          "name": "Get Leaderboard",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/scores/leaderboard/Arena?top=10",
              "host": ["{{baseUrl}}"],
              "path": ["api", "scores", "leaderboard", "Arena"],
              "query": [
                {"key": "top", "value": "10"}
              ]
            }
          }
        },
        {
          "name": "Create Score",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"gameMode\": \"Arena\",\n  \"points\": 20000,\n  \"kills\": 60,\n  \"deaths\": 2,\n  \"timePlayed\": 4500,\n  \"difficultyLevel\": 7,\n  \"playerId\": 1\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/scores",
              "host": ["{{baseUrl}}"],
              "path": ["api", "scores"]
            }
          }
        }
      ]
    }
  ]
}
